<h1>Clients</h1>
<p class="pull-right">

<%= link_to 'New Client', new_client_path ,:class=>"btn btn-info"%>
</p>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each_with_index do |client, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= client.first_name %></td>
      <td><%= client.last_name %></td>
      <td><%= client.phone1 %>,<%= client.phone2 %></td>
      <td><%= client.email_id %></td>
      <td><%= link_to 'Show', client %>
      <%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

